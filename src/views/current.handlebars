<body>
    <section class="chat-container">
        <div class="card">
            <div class="card-body">
                <div class="mb-md-5 mt-md-4 pb-1">
                    <h2 class="card-title">Datos Usuario</h2>
                    <div class="card-text">
                        {{#if user.isGithub}}
                        <p>Nombre/Usuario: {{{user.first_name}}}</p>
                        <p>Ingresó con: Github</p>
                        {{else}}
                        <p>Nombre: {{{user.first_name}}}</p>
                        <p>Apellido: {{{user.last_name}}}</p>
                        <p>Edad: {{{user.age}}}</p>
                        <p>Ingreso con: LocalPassport</p>
                        {{/if}}
                    </div>
                    
                    <button onclick="redirectToProducts()">Ir a Productos</button>
                    <p class="mt-3">Si no presionas el botón, serás redirigido a la página de productos en 10 segundos.
                    </p>
                </div>
            </div>
        </div>
    </section>

    <script>
        function redirectToProducts() {
            setTimeout(() => {
                window.location.href = '/products';
            }, 10000); // Redirige después de 10 segundos
        }
        redirectToProducts(); // Llamada inicial para empezar la cuenta regresiva
    </script>
</body>
